{
  "pluginAlias": "redis",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Homebridge-redis is a dynamic Plugin that allows you to add and control accessories with a redis API.",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "redis",
        "required": true
      },
      "redis": {
        "title": "Redis URI",
        "type": "string",
        "default": "redis://0.0.0.0:6379",
        "required": true
      },
      "getterDevices": {
        "title": "Getter devices",
        "type": "string",
        "default": "*",
        "description": "Name1.ServiceName1#Characteristic1,Characteristic2|Name2.ServiceName2#Characteristic3,Characteristic4",
        "required": false
      },
      "topic_type": {
        "title": "topic_type",
        "type": "string",
        "required": false,
        "default": "multiple",
        "description": "multiple: the data is sent to all devices, single: the data is sent to a single device. Default: multiple."
      },
      "topic_prefix": {
        "title": "topic_prefix",
        "type": "string",
        "required": false,
        "default": "homebridge",
        "description": "User defined topix_prefix e.g. 'hmtest'. Default 'homebridge'."
      }
    }
  }
}
